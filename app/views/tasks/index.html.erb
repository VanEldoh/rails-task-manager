<% @tasks.each do |task| %>
 <h1><%= link_to task.title, task_path(task) %></h1>
 <h3><%= link_to "delete a task", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %><h3>
<% if task.completed == true %>
<i class="far fa-check-square"></i>
<% else %>
<i class="far fa-square"> </i>
 <% end %>
<% end %>

<h3><%= link_to "add a new task", tasks_new_path %></h3>

